<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
  <tr>
    <th>Using</th>
    <th>Student</th>
    <th>Teacher</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.using %></td>
      <td><%= room.student_id %></td>
      <td><%= room.teacher_id %></td>
      <td><%= link_to 'Show', room %></td>
      <td><%= link_to 'Edit', edit_room_path(room) %></td>
      <td><%= link_to 'Destroy', room, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

