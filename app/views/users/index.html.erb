<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.type %></td>
      <% if @current_user.admin? && !current_user?(user) %>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
      <td><%= link_to "See all #{user.type.pluralize}", sti_user_path(user.type) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>
<br>

<%= link_to "New #{@type}", sti_user_path(@type, nil, :new) %>
<%= link_to 'See all users', sti_user_path %>
