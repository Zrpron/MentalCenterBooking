<% if current_student.scheduled_student %>
  <% scheduled_student = current_student.scheduled_student %>
  <% if scheduled_student.schedules.active.any? %>
    <% s = scheduled_student.schedules.active[0] %>
    <% l = s.location %>
    <%= "Your scheduled campus is #{l.place}, your teacher is #{l.teacher.name}, you have do #{s.scheduled_times} times." %><br />
    <% if Time.now < s.next_start_time %>
      <%= "Your schedule is will start at #{l.weekday}, #{s.next_start_time}." %>
    <% else %>
      <%= "Your last schedule was started at #{l.weekday}, #{s.next_start_time}. Do you want to renew schedule?" %>
      <%= link_to "Renew schedule!", renew_students_schedule_path %>
    <% end %>
  <% elsif scheduled_student.schedules.pending.any? %>
    <% pending_schedules = scheduled_student.schedules.pending %>
    <% pending_schedules.each do |s|%>
      <% l = s.location %>
      <%= "There are #{check_pending_num(l)} people in front of your schedule at #{l.place}, #{l.weekday}, #{l.start_time.to_s(:hm)}, teacher #{s.teacher.name}" %><br />
    <% end %>

  <% end %>

  <%= link_to "Destroy schedule!", delete_scheduled_students_path, method: "delete" %>
<% else %>
  <%= link_to 'New schedule!', new_scheduled_students_path%>
<% end %>